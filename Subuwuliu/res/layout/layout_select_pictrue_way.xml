<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#00000000" >
    
    <TextView 
        android:id="@+id/select_picture_way_take"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/select_picture_way_text_top_bottom"
        android:paddingBottom="@dimen/select_picture_way_text_top_bottom"
        android:textColor="#6c6c6c"
        android:textSize="@dimen/select_picture_way_text_size"
        android:text="@string/select_picture_way_tack_tip"
        android:background="#ffffff"
        />
    
    <include layout="@layout/view_line_small" />
    
    <TextView 
        android:id="@+id/select_picture_way_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/select_picture_way_text_top_bottom"
        android:paddingBottom="@dimen/select_picture_way_text_top_bottom"
        android:textColor="#6c6c6c"
        android:textSize="@dimen/select_picture_way_text_size"
        android:text="@string/select_picture_way_photo_tip"
        android:background="#ffffff"
        />
    
    <TextView 
        android:id="@+id/select_picture_way_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/select_picture_way_text_top_bottom"
        android:paddingBottom="@dimen/select_picture_way_text_top_bottom"
        android:layout_marginTop="@dimen/select_picture_way_text_space"
        android:textColor="#6c6c6c"
        android:textSize="@dimen/select_picture_way_text_size"
        android:text="@string/select_picture_way_cancel_tip"
        android:background="#ffffff"
        />
    
</LinearLayout>

