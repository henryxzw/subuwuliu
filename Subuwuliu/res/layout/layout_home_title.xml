<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/home_title_layout_height"
    android:background="#1c2134" >

    <TextView
        android:id="@+id/home_title_layout_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/home_title"
        android:textColor="#EF8B2B"
        android:textSize="@dimen/home_title_layout_title_size" />

    <ImageView
        android:id="@+id/home_title_layout_me"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="10dp"
        android:src="@drawable/mesiji" />

    <TextView
        android:id="@+id/home_title_layout_find"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:paddingBottom="10dp"
        android:paddingLeft="@dimen/home_title_layout_left_right"
        android:paddingRight="@dimen/home_title_layout_left_right"
        android:paddingTop="15dp"
        android:text="@string/home_right_tip"
        android:textColor="#ffffff"
        android:textSize="@dimen/home_title_layout_tip_size" />

</RelativeLayout>