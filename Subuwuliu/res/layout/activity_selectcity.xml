<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <include 
        android:id="@+id/selectcity_title"
        layout="@+layout/layout_title"
        />
    
    <EditText 
        android:id="@+id/selectcity_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textColor="#6c6c6c"
        android:textColorHint="#9c9c9c"
        android:hint="@string/selectcity_search_tip"
        android:padding="@dimen/selectcity_search_text_padding"
        android:background="#ffffff"
        />
    
    <include 
        layout="@layout/view_line_small"
        />
    
    <ListView 
        android:id="@+id/selectcity_list"
        android:layout_width="match_parent"
   		android:layout_height="match_parent"
        android:scrollbars="none"
        android:cacheColorHint="#00000000"
        ></ListView>

</LinearLayout>
