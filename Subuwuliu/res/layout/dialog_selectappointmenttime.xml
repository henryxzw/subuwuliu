<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/selectappointmenttime_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90000000"
    android:focusableInTouchMode="true" >
    
    <LinearLayout
        android:id="@+id/selectappointmenttime_child_layout"
	    android:layout_width="@dimen/select_dialog_width"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:orientation="vertical"
	    android:layout_centerInParent="true"
	    android:background="@drawable/select_good_background"
	    android:focusableInTouchMode="true" >
    
	    <TextView 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="@dimen/select_dialog_padding_top_bottom"
	        android:layout_marginBottom="@dimen/select_dialog_padding_top_bottom"
	        android:textColor="#6c6c6c"
	        android:textSize="@dimen/select_dialog_text_size"
	        android:text="设置时间"
	        android:gravity="center_horizontal"
	        />
	    
	    <View
	        android:layout_width="match_parent"
	        android:layout_height="0.5dp"
	        android:background="#9c9c9c"
	        />
	    
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:gravity="center_horizontal"
	        >
			<com.johan.subuwuliu.view.WheelView
			    android:id="@+id/selectappointmenttime_picker_day_view"
			    android:layout_width="@dimen/selecttime_sigal_width"
			    android:layout_height="wrap_content"
			    />
			<TextView 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textColor="#6c6c6c"
			    android:textSize="@dimen/layout_content_text_size"
			    android:text="日"
			    android:layout_gravity="center_vertical"
			    />
			<com.johan.subuwuliu.view.WheelView
			    android:id="@+id/selectappointmenttime_picker_hour_view"
			    android:layout_width="@dimen/selecttime_sigal_width"
			    android:layout_height="wrap_content"
			    />
			<TextView 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textColor="#6c6c6c"
			    android:textSize="@dimen/layout_content_text_size"
			    android:text="时"
			    android:layout_gravity="center_vertical"
			    />
		</LinearLayout>
		
		<View
	        android:layout_width="match_parent"
	        android:layout_height="0.5dp"
	        android:background="#9c9c9c"
	        />
	    
	    <Button 
	        android:id="@+id/selectappointmenttime_but_ok"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="@dimen/select_dialog_padding_top_bottom"
	        android:layout_marginBottom="@dimen/select_dialog_padding_top_bottom"
	        android:paddingLeft="@dimen/layout_content_left_right"
	        android:paddingRight="@dimen/layout_content_left_right"
	        android:paddingTop="10dp"
	        android:paddingBottom="10dp"
	        android:gravity="center_horizontal"
	        android:textColor="@drawable/select_appointmenttime_text"
	        android:textSize="@dimen/select_dialog_text_size"
	        android:text="确认"
	        android:background="@drawable/select_appointmenttime_but"
	        />
    
  	</LinearLayout>

</RelativeLayout>
