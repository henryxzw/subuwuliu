            android:id="@+id/item_selectcity_hot_city_6_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#6c6c6c"
            android:textSize="@dimen/selectcity_item_city_text_size"
            android:gravity="center_horizontal"
			android:paddingTop="@dimen/selectcity_item_hot_city_item_top_bottom"
			android:paddingBottom="@dimen/selectcity_item_hot_city_item_top_bottom"
