<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/setting_dialog_width"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/setting_gps_background"
    android:padding="@dimen/layout_content_left_right" >
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#6c6c6c"
        android:textSize="@dimen/layout_content_text_size"
        android:text="账号提醒"
        />
    
    <TextView 
        android:id="@+id/accounterror_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#6c6c6c"
        android:textSize="@dimen/layout_content_text_size"
        android:layout_marginTop="@dimen/setting_gps_dialog_tip_top_bottom"
        android:layout_marginBottom="@dimen/setting_gps_dialog_tip_top_bottom"
        android:lineSpacingExtra="5dp"
        />
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button 
	        android:id="@+id/accounterror_but_cancel"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#d24848"
	        android:textSize="@dimen/layout_content_text_size"
	        android:text="取消"
	        android:layout_alignParentLeft="true"
	        android:background="#eeeeee"
	        />
	    <Button 
	        android:id="@+id/accounterror_but_ok"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#d24848"
	        android:textSize="@dimen/layout_content_text_size"
	        android:text="@string/setting_gps_but_tip"
	        android:layout_alignParentRight="true"
	        android:background="#eeeeee"
	        />
    </RelativeLayout>

</LinearLayout>
