<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/layout_content_left_right"
    android:paddingRight="@dimen/layout_content_left_right"
    android:orientation="horizontal" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/appointment_item_height"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@drawable/appointment_item_background"
        android:layout_marginRight="@dimen/appointment_item_horizontal_left_right"
        >
        <TextView 
            android:id="@+id/item_appointment_begin_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:textSize="@dimen/layout_content_text_size"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            />
        <ImageView 
            android:id="@+id/item_appointment_begin_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cancel"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/appointment_item_height"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@drawable/appointment_item_background"
        android:layout_marginLeft="@dimen/appointment_item_horizontal_left_right"
        >
        <TextView 
            android:id="@+id/item_appointment_end_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:textSize="@dimen/layout_content_text_size"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            />
        <ImageView 
            android:id="@+id/item_appointment_end_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cancel"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>

</LinearLayout>
