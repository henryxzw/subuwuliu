<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:roundview="http://schemas.android.com/apk/res/com.johan.subuwuliu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        >
        
	    <LinearLayout 
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="vertical"
	        >
    
		    <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:paddingLeft="@dimen/layout_content_left_right"
		        android:paddingRight="@dimen/layout_content_left_right"
		        android:paddingTop="@dimen/managercar_item_top_bottom"
		        android:paddingBottom="@dimen/managercar_item_top_bottom"
		        android:background="#eeeeee"
		        >
		     	<View 
		     	    android:layout_width="2dp"
		     	    android:layout_height="match_parent"
		     	    android:background="#EF8B2B"
		     	    />   
		     	 <TextView 
		     	    android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textColor="#6c6c6c"
		            android:textSize="@dimen/layout_content_title_size"
		            android:text="@string/managercar_car_info_tip"
		            android:layout_gravity="center_vertical"
		            android:layout_marginLeft="@dimen/managercar_item_top_bottom"
		     	     />
			</LinearLayout>
			
		    <include layout="@layout/view_line_small"/>
		    
		    <RelativeLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:paddingLeft="@dimen/layout_content_left_right"
		        android:paddingRight="@dimen/layout_content_left_right"
		        android:paddingTop="@dimen/managercar_item_top_bottom"
		        >
		        <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textColor="#9c9c9c"
		            android:textSize="@dimen/layout_content_text_size"
		            android:text="@string/managercar_car_number_tip"
		            />
		        <TextView 
		            android:id="@+id/managercar_car_number"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textColor="#9c9c9c"
		            android:textSize="@dimen/layout_content_text_size"
		            android:layout_alignParentRight="true"
		            />
		        <View 
		            android:layout_width="match_parent"
		            android:layout_height="0.5dp"
		            android:background="#9c9c9c"
		            android:layout_marginTop="@dimen/managercar_item_top_bottom"
		            android:layout_below="@+id/managercar_car_number"
		            />
		    </RelativeLayout>
		    
		    <RelativeLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:paddingLeft="@dimen/layout_content_left_right"
		        android:paddingRight="@dimen/layout_content_left_right"
		        android:paddingTop="@dimen/managercar_item_top_bottom"
		        >
		        <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textColor="#9c9c9c"
		            android:textSize="@dimen/layout_content_text_size"
		            android:text="@string/managercar_engine_number_tip"
		            />
		        <TextView 
		            android:id="@+id/managercar_engine_number"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textColor="#9c9c9c"
		            android:textSize="@dimen/layout_content_text_size"
		            android:layout_alignParentRight="true"
		            />
		        <View 
		            android:layout_width="match_parent"
		            android:layout_height="0.5dp"
		            android:background="#9c9c9c"
		            android:layout_marginTop="@dimen/managercar_item_top_bottom"
		            android:layout_below="@+id/managercar_engine_number"
		            />
		    </RelativeLayout>
		    
		    <RelativeLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:paddingLeft="@dimen/layout_content_left_right"
		        android:paddingRight="@dimen/layout_content_left_right"
		        android:paddingTop="@dimen/managercar_item_top_bottom"
		        >
		        <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textColor="#9c9c9c"
		            android:textSize="@dimen/layout_content_text_size"
		            android:text="@string/managercar_car_type_tip"
		            />
		        <TextView 
		            android:id="@+id/managercar_car_type"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textColor="#9c9c9c"
		            android:textSize="@dimen/layout_content_text_size"
		            android:layout_alignParentRight="true"
		            />
		        <View 
		            android:layout_width="match_parent"
		            android:layout_height="0.5dp"
		            android:background="#9c9c9c"
		            android:layout_marginTop="@dimen/managercar_item_top_bottom"
		            android:layout_below="@+id/managercar_car_type"
		            />
		    </RelativeLayout>
		    
		    <RelativeLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:paddingLeft="@dimen/layout_content_left_right"
		        android:paddingRight="@dimen/layout_content_left_right"
		        android:paddingTop="@dimen/managercar_item_top_bottom"
		        android:paddingBottom="@dimen/managercar_item_top_bottom"
		        >
		        <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textColor="#9c9c9c"
		            android:textSize="@dimen/layout_content_text_size"
		            android:text="@string/managercar_car_size_tip"
		            />
		        <TextView 
		            android:id="@+id/managercar_car_size"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textColor="#9c9c9c"
		            android:textSize="@dimen/layout_content_text_size"
		            android:layout_alignParentRight="true"
		            />
		    </RelativeLayout>
		    
		    <include layout="@layout/view_line_small"/>
		    
		    <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:paddingLeft="@dimen/layout_content_left_right"
		        android:paddingRight="@dimen/layout_content_left_right"
		        android:paddingTop="@dimen/managercar_item_top_bottom"
		        android:paddingBottom="@dimen/managercar_item_top_bottom"
		        android:background="#eeeeee"
		        >
		     	<View 
		     	    android:layout_width="2dp"
		     	    android:layout_height="match_parent"
		     	    android:background="#EF8B2B"
		     	    />   
		     	 <TextView 
		     	    android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textColor="#6c6c6c"
		            android:textSize="@dimen/layout_content_title_size"
		            android:text="@string/managercar_car_picture_tip"
		            android:layout_gravity="center_vertical"
		            android:layout_marginLeft="@dimen/managercar_item_top_bottom"
		     	     />
			</LinearLayout>
			
		    <include layout="@layout/view_line_small"/>
		    
		    <RelativeLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:paddingLeft="@dimen/layout_content_left_right"
		        android:paddingRight="@dimen/layout_content_left_right"
		        android:paddingTop="@dimen/managercar_item_top_bottom"
		        android:paddingBottom="@dimen/managercar_item_top_bottom"
		        >
		        <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textColor="#9c9c9c"
		            android:textSize="@dimen/layout_content_text_size"
		            android:text="@string/managercar_car_picture_detail_tip"
		            android:layout_centerVertical="true"
		            />
		        <LinearLayout 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignParentRight="true"
		            android:orientation="horizontal"
		            >
		            <com.johan.subuwuliu.view.RoundImageView 
				        android:id="@+id/managercar_car_picture_1"
				        android:layout_width="@dimen/roundimageview_size"
				        android:layout_height="@dimen/roundimageview_size"
				        roundview:borderRadius="5dp"
				        roundview:type="round"
				        android:layout_marginRight="@dimen/managercar_img_space"
				        />
		            <com.johan.subuwuliu.view.RoundImageView 
				        android:id="@+id/managercar_car_picture_2"
				        android:layout_width="@dimen/roundimageview_size"
				        android:layout_height="@dimen/roundimageview_size"
				        roundview:borderRadius="5dp"
				        roundview:type="round"
				        android:layout_marginRight="@dimen/managercar_img_space"
				        />
		            <com.johan.subuwuliu.view.RoundImageView 
				        android:id="@+id/managercar_car_picture_3"
				        android:layout_width="@dimen/roundimageview_size"
				        android:layout_height="@dimen/roundimageview_size"
				        roundview:borderRadius="5dp"
				        roundview:type="round"
				        android:layout_marginRight="@dimen/managercar_img_space"
				        />
		            <com.johan.subuwuliu.view.RoundImageView 
				        android:id="@+id/managercar_car_picture_4"
				        android:layout_width="@dimen/roundimageview_size"
				        android:layout_height="@dimen/roundimageview_size"
				        roundview:borderRadius="5dp"
				        roundview:type="round"
				        />
		        </LinearLayout>
		    </RelativeLayout>
		    
		    <include layout="@layout/view_line_small"/>
		    
		    <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:paddingLeft="@dimen/layout_content_left_right"
		        android:paddingRight="@dimen/layout_content_left_right"
		        android:paddingTop="@dimen/managercar_item_top_bottom"
		        android:paddingBottom="@dimen/managercar_item_top_bottom"
		        android:background="#eeeeee"
		        >
		     	<View 
		     	    android:layout_width="2dp"
		     	    android:layout_height="match_parent"
		     	    android:background="#EF8B2B"
		     	    />   
		     	 <TextView 
		     	    android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textColor="#6c6c6c"
		            android:textSize="@dimen/layout_content_title_size"
		            android:text="@string/managercar_other_certificates_tip"
		            android:layout_gravity="center_vertical"
		            android:layout_marginLeft="@dimen/managercar_item_top_bottom"
		     	     />
			</LinearLayout>
			
		    <include layout="@layout/view_line_small"/>
			
		    <RelativeLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:paddingLeft="@dimen/layout_content_left_right"
		        android:paddingRight="@dimen/layout_content_left_right"
		        android:paddingTop="@dimen/managercar_item_top_bottom"
		        >
		        <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textColor="#9c9c9c"
		            android:textSize="@dimen/layout_content_text_size"
		            android:text="@string/managercar_driver_license_tip"
		            android:layout_centerVertical="true"
		            />
		        <LinearLayout 
		            android:id="@+id/managercar_driver_license_layout"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignParentRight="true"
		            android:orientation="horizontal"
		            >
			        <com.johan.subuwuliu.view.RoundImageView 
				        android:id="@+id/managercar_driver_license_1"
				        android:layout_width="@dimen/roundimageview_size"
				        android:layout_height="@dimen/roundimageview_size"
				        roundview:borderRadius="5dp"
				        roundview:type="round"
				        android:layout_marginRight="@dimen/managercar_img_space"
				        />
			        <com.johan.subuwuliu.view.RoundImageView 
				        android:id="@+id/managercar_driver_license_2"
				        android:layout_width="@dimen/roundimageview_size"
				        android:layout_height="@dimen/roundimageview_size"
				        roundview:borderRadius="5dp"
				        roundview:type="round"
				        />
		        </LinearLayout>
		        <View 
		            android:layout_width="match_parent"
		            android:layout_height="0.5dp"
		            android:background="#9c9c9c"
		            android:layout_marginTop="@dimen/managercar_item_top_bottom"
		            android:layout_below="@+id/managercar_driver_license_layout"
		            />
		    </RelativeLayout>
		    
		    <RelativeLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:paddingLeft="@dimen/layout_content_left_right"
		        android:paddingRight="@dimen/layout_content_left_right"
		        android:paddingTop="@dimen/managercar_item_top_bottom"
		        >
		        <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textColor="#9c9c9c"
		            android:textSize="@dimen/layout_content_text_size"
		            android:text="@string/managercar_car_insurance_tip"
		            android:layout_centerVertical="true"
		            />
		        <com.johan.subuwuliu.view.RoundImageView 
			        android:id="@+id/managercar_car_insurance"
			        android:layout_width="@dimen/roundimageview_size"
			        android:layout_height="@dimen/roundimageview_size"
			        roundview:borderRadius="5dp"
			        roundview:type="round"
			        android:layout_alignParentRight="true"
			        />
		        <View 
		            android:layout_width="match_parent"
		            android:layout_height="0.5dp"
		            android:background="#9c9c9c"
		            android:layout_marginTop="@dimen/managercar_item_top_bottom"
		            android:layout_below="@+id/managercar_car_insurance"
		            />
		    </RelativeLayout>
		    
		    <RelativeLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:paddingLeft="@dimen/layout_content_left_right"
		        android:paddingRight="@dimen/layout_content_left_right"
		        android:paddingTop="@dimen/managercar_item_top_bottom"
		        >
		        <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textColor="#9c9c9c"
		            android:textSize="@dimen/layout_content_text_size"
		            android:text="@string/managercar_operation_tip"
		            android:layout_centerVertical="true"
		            />
		        <com.johan.subuwuliu.view.RoundImageView 
			        android:id="@+id/managercar_operation"
			        android:layout_width="@dimen/roundimageview_size"
			        android:layout_height="@dimen/roundimageview_size"
			        roundview:borderRadius="5dp"
			        roundview:type="round"
			        android:layout_alignParentRight="true"
			        />
		        <View 
		            android:layout_width="match_parent"
		            android:layout_height="0.5dp"
		            android:background="#9c9c9c"
		            android:layout_marginTop="@dimen/managercar_item_top_bottom"
		            android:layout_below="@+id/managercar_operation"
		            />
		    </RelativeLayout>
		    
		    <RelativeLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:paddingLeft="@dimen/layout_content_left_right"
		        android:paddingRight="@dimen/layout_content_left_right"
		        android:paddingTop="@dimen/managercar_item_top_bottom"
		        android:paddingBottom="@dimen/managercar_item_top_bottom"
		        >
		        <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textColor="#9c9c9c"
		            android:textSize="@dimen/layout_content_text_size"
		            android:text="@string/managercar_customs_supervision_book"
		            android:layout_centerVertical="true"
		            />
		        <com.johan.subuwuliu.view.RoundImageView 
			        android:id="@+id/managercar_customs_supervision"
			        android:layout_width="@dimen/roundimageview_size"
			        android:layout_height="@dimen/roundimageview_size"
			        roundview:borderRadius="5dp"
			        roundview:type="round"
			        android:layout_alignParentRight="true"
			        />
		    </RelativeLayout>
    
    	</LinearLayout>
    	
    </ScrollView>

</LinearLayout>
