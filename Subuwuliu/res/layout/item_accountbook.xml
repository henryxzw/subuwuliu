<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/layout_content_left_right"
    android:orientation="horizontal" >
    
    <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView 
            android:id="@+id/item_accountbook_time_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/layout_content_tip_size"
            android:textColor="#9c9c9c"
            />
        <TextView 
            android:id="@+id/item_accountbook_time_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/layout_content_tip_size"
            android:textColor="#9c9c9c"
            android:layout_below="@+id/item_accountbook_time_1"
            />
    </RelativeLayout>
    
    <TextView 
        android:id="@+id/item_accountbook_tip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="@dimen/layout_content_text_size"
        android:textColor="#6c6c6c"
       	android:layout_gravity="center_vertical"
       	android:paddingLeft="@dimen/layout_content_left_right"
        />
    
    <TextView 
        android:id="@+id/item_accountbook_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/layout_content_text_size"
        android:textColor="#EF8B2B"
       	android:layout_gravity="center_vertical"
        />

</LinearLayout>
