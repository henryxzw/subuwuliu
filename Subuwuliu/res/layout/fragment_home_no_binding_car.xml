<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/home_title_layout_left_right"
    android:paddingRight="@dimen/home_title_layout_left_right" >
    
    <TextView 
        android:id="@+id/home_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/layout_content_tip_size"
		android:textColor="#ffffff"
        />
    
    <TextView 
        android:id="@+id/home_driver_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_time"
        android:layout_marginTop="@dimen/home_tip_vertical_space"
        android:textSize="@dimen/layout_content_title_size"
		android:textColor="#ffffff"
        />
    
    <TextView 
        android:id="@+id/home_no_binding_car_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_driver_name"
        android:layout_marginTop="@dimen/home_tip_vertical_space"
        android:textSize="@dimen/layout_content_text_size"
		android:textColor="#ffffff"
		android:text="未绑定车辆"
        />
    
    <Button 
        android:id="@+id/home_no_binding_car_but"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_content_but_height"
        android:layout_marginBottom="@dimen/home_but_bottom"
        android:layout_alignParentBottom="true"
        android:background="@drawable/home_but"
        android:text="@string/home_binding_car_but_text"
        android:textSize="@dimen/layout_content_but_text_size"
        android:textColor="#ffffff"
        />

</RelativeLayout>
