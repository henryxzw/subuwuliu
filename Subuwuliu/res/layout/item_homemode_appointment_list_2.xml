<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/appointment_item_space"
    android:paddingLeft="@dimen/layout_content_left_right"
    android:paddingRight="@dimen/layout_content_left_right"
    android:orientation="horizontal">
       	    
    <TextView
       android:id="@+id/item_appointment_begin_time_title"
       android:layout_width="match_parent"
       android:layout_height="@dimen/appointment_item_height"
       android:layout_marginRight="@dimen/appointment_item_horizontal_left_right"
       android:layout_weight="1"
       android:background="@drawable/corner_5dp_gray_white"
       android:gravity="center"
       android:text="从开始时间"
       android:textColor="#6c6c6c"
       android:textSize="@dimen/layout_content_text_size" />

    <TextView
       android:id="@+id/item_appointment_end_time_title"
       android:layout_width="match_parent"
       android:layout_height="@dimen/appointment_item_height"
       android:layout_marginLeft="@dimen/appointment_item_horizontal_left_right"
       android:layout_weight="1"
       android:background="@drawable/corner_5dp_gray_white"
       android:gravity="center"
       android:text="到结束时间"
       android:textColor="#6c6c6c"
       android:textSize="@dimen/layout_content_text_size" />

</LinearLayout>