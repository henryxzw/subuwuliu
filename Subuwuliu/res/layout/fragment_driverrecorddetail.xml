<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_a1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/driverrecorddetail_AAcall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_content_left_right"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/lianxiren" />

        <TextView
            android:id="@+id/driverrecorddetail_contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/layout_content_left_right"
            android:textColor="#6c6c6c"
            android:textSize="@dimen/layout_content_text_size" />

        <TextView
            android:id="@+id/driverrecorddetail_contact_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/layout_content_left_right"
            android:layout_weight="1"
            android:textColor="#6c6c6c"
            android:textSize="@dimen/layout_content_text_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/lianxi" />
    </LinearLayout>

    <include layout="@layout/view_line_small" />

    <LinearLayout
        android:id="@+id/linear_orderA1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_content_left_right"
        android:layout_marginRight="@dimen/layout_content_left_right"
        android:layout_marginTop="@dimen/layout_content_left_right"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/eyyq" />

        <TextView
            android:id="@+id/driverrecorddetail_extra_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/layout_content_left_right"
            android:textColor="#6c6c6c"
            android:textSize="@dimen/layout_content_text_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_orderA2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_content_left_right"
        android:layout_marginRight="@dimen/layout_content_left_right"
        android:layout_marginTop="@dimen/layout_content_left_right"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/bzsx" />

        <TextView
            android:id="@+id/driverrecorddetail_good_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/layout_content_left_right"
            android:textColor="#6c6c6c"
            android:textSize="@dimen/layout_content_text_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_orderA3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_content_left_right"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/more" />

        <TextView
            android:id="@+id/driverrecorddetail_extra_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/layout_content_left_right"
            android:textColor="#6c6c6c"
            android:textSize="@dimen/layout_content_text_size" />
    </LinearLayout>

    <TextView
        android:id="@+id/driverrecorddetail_remark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/layout_content_left_right"
        android:layout_marginLeft="@dimen/layout_content_left_right"
        android:textColor="#6c6c6c"
        android:textSize="@dimen/layout_content_text_size" />

    <com.johan.subuwuliu.view.ScrollGridView
        android:id="@+id/driverrecorddetail_car_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_content_left_right"
        android:layout_marginRight="@dimen/layout_content_left_right"
        android:numColumns="4"
        android:scrollbars="none" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/layout_content_left_right"
        android:layout_marginRight="@dimen/layout_content_left_right"
        android:layout_marginTop="@dimen/layout_content_left_right"
        android:background="#9c9c9c" />

    <TextView
        android:id="@+id/driverrecorddetail_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/orderdetail_price_top_bottom"
        android:layout_marginLeft="@dimen/layout_content_left_right"
        android:layout_marginRight="@dimen/layout_content_left_right"
        android:layout_marginTop="@dimen/orderdetail_price_top_bottom"
        android:gravity="center"
        android:textColor="#84C148"
        android:textSize="@dimen/layout_content_text_size" />

</LinearLayout>